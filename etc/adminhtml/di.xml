<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <virtualType name="Klevu\Configuration\ViewModel\Config\Information\KnowledgeBase"
                 type="Klevu\Configuration\ViewModel\Config\Information\ArticleList">
        <arguments>
            <argument name="articles" xsi:type="array">
                <item name="documentation" xsi:type="array">
                    <item name="analytics" xsi:type="array">
                        <item name="link" xsi:type="string"><![CDATA[https://docs.klevu.com/klevu-magento-v4/analytics-overview]]></item>
                        <item name="order" xsi:type="number">300</item>
                        <item name="title" xsi:type="string">Analytics</item>
                    </item>
                </item>
            </argument>
        </arguments>
    </virtualType>

    <type name="Klevu\Configuration\ViewModel\Config\Information\ModuleVersions">
        <arguments>
            <argument name="composerPackageIdentifiers" xsi:type="array">
                <item name="klevu_php_pipelines" xsi:type="string"><![CDATA[klevu/php-pipelines]]></item>
                <item name="klevu_php_sdk" xsi:type="string"><![CDATA[klevu/php-sdk]]></item>
                <item name="klevu_php_sdk_pipelines" xsi:type="string"><![CDATA[klevu/php-sdk-pipelines]]></item>
            </argument>
        </arguments>
    </type>

</config>
